<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="@color/background_white"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@id/certificate_image_show"
        android:layout_width="@dimen/dp_61"
        android:layout_height="49dp"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/dp_16"
        android:src="@mipmap/certificate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/certificate_name"
        style="@style/BaseTextViewStyle.Black.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_10"
        android:text="一级建造工程师"
        app:layout_constraintLeft_toRightOf="@id/certificate_image_show"
        app:layout_constraintTop_toTopOf="@id/certificate_image_show" />

    <TextView
        android:id="@id/certificate_update_state"
        style="@style/BaseTextViewStyle.Gray.11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交成功，审核中"
        app:layout_constraintLeft_toLeftOf="@id/certificate_name"
        app:layout_constraintTop_toBottomOf="@id/certificate_name" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/divider_color_ffdedede"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>