<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@id/action_bar"
        layout="@layout/layout_action_bar" />

    <View style="@style/DividerStyle" />

    <LinearLayout
        android:id="@+id/app_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/action_bar">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/action_bar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/app_name"
            android:textColor="@color/color_252525"
            android:textSize="@dimen/sp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_icon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginBottom="24dp"
            android:text="@string/app_version"
            android:textColor="@color/color_96A1AD"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_name" />
    </LinearLayout>

    <View
        style="@style/DividerStyle"
        android:layout_height="@dimen/dp_10" />

    <RelativeLayout
        android:id="@id/about_us_service"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:background="@color/background_white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <TextView
            style="@style/BaseTextViewStyle.Black.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务协议" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/arrow_detail" />
    </RelativeLayout>

    <View style="@style/DividerStyle" />

    <RelativeLayout
        android:id="@id/about_us_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:background="@color/background_white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <TextView
            style="@style/BaseTextViewStyle.Black.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版权协议" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/arrow_detail" />

    </RelativeLayout>

    <View style="@style/DividerStyle" />

    <RelativeLayout
        android:id="@id/about_us_secret"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:background="@color/background_white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <TextView
            style="@style/BaseTextViewStyle.Black.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐私政策" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/arrow_detail" />

    </RelativeLayout>


    <View
        style="@style/DividerStyle"
        android:layout_height="@dimen/dp_10" />

    <RelativeLayout
        android:id="@id/about_us_feature"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:background="@color/background_white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <TextView
            style="@style/BaseTextViewStyle.Black.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新功能介绍" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/arrow_detail" />
    </RelativeLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background_gray" />
</LinearLayout>