<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@id/action_bar"
        layout="@layout/layout_action_bar" />

    <View style="@style/DividerStyle" />

    <RelativeLayout
        android:id="@id/settings_reset_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:background="@color/background_white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <TextView
            style="@style/BaseTextViewStyle.Black.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_pwd" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/arrow_detail" />
    </RelativeLayout>

    <View style="@style/DividerStyle" />

    <RelativeLayout
        android:id="@id/settings_update_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:background="@color/background_white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <TextView
            style="@style/BaseTextViewStyle.Black.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_tel_phone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/arrow_detail" />
    </RelativeLayout>

    <View style="@style/DividerStyle" />
    <LinearLayout
        android:id="@id/settings_check_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:background="@color/background_white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <TextView
            style="@style/BaseTextViewStyle.Black.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查更新" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:text="@string/app_version" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/arrow_detail" />
    </LinearLayout>

    <View style="@style/DividerStyle" />
    <RelativeLayout
        android:id="@id/settings_clean_cache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:background="@color/background_white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <TextView
            style="@style/BaseTextViewStyle.Black.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除缓存" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/arrow_detail" />
    </RelativeLayout>

    <View
        style="@style/DividerStyle"
        android:layout_height="@dimen/dp_10" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/login_exit"
        style="@style/BaseTextViewStyle.Black.14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:background="@color/background_white"
        android:text="退出登录" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background_gray" />


</LinearLayout>