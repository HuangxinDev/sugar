<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@id/action_bar"
        layout="@layout/layout_action_bar" />

    <View style="@style/DividerStyle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/background_white"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_38">

                <TextView
                    style="@style/BaseTextViewStyle.Black.14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="头像" />

                <com.njxm.smart.view.CircleImageView
                    android:id="@id/news_user_head"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/personal_news_head" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/background_white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_38">

                <TextView
                    style="@style/BaseTextViewStyle.Black.14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/color_black_383838" />

                <TextView
                    android:id="@+id/news_user_name1"
                    style="@style/BaseTextViewStyle.Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="赵建国"
                    android:textColor="@color/color_gray_7c7c7c"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <LinearLayout
                android:id="@id/news_user_phone_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/background_white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16">

                <TextView
                    style="@style/BaseTextViewStyle.Black.14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机"
                    android:textColor="@color/color_black_383838" />

                <TextView
                    android:id="@id/news_user_phone"
                    style="@style/BaseTextViewStyle.Gray"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="手机号"
                    android:gravity="end"
                    android:textColor="@color/color_gray_7c7c7c"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:src="@mipmap/arrow_detail" />
            </LinearLayout>

            <RelativeLayout
                android:id="@id/news_user_base_new"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/background_white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16">

                <TextView
                    style="@style/BaseTextViewStyle.Black.14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基本信息"
                    android:textColor="@color/color_black_383838" />

                <ImageView
                    android:id="@id/news_user_base_new_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/dp_15"
                    android:src="@mipmap/arrow_detail" />
            </RelativeLayout>

            <LinearLayout
                android:id="@id/news_user_base_new_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_53"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@color/background_white"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_39">

                    <TextView
                        style="@style/BaseTextViewStyle.Gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单位名称"
                        android:textColor="@color/color_gray_7c7c7c"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@id/user_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="单位" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_53"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@color/background_white"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_39">

                    <TextView
                        style="@style/BaseTextViewStyle.Gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="部门名称"
                        android:textColor="@color/color_gray_7c7c7c"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@id/user_department_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="部门" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_53"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@color/background_white"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_39">

                    <TextView
                        style="@style/BaseTextViewStyle.Gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="班组"
                        android:textColor="@color/color_gray_7c7c7c"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@id/user_team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="施工二组" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_53"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@color/background_white"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_39">

                    <TextView
                        style="@style/BaseTextViewStyle.Gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="岗位名称"
                        android:textColor="@color/color_gray_7c7c7c"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@id/user_post_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="普工" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@id/news_user_input_face_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/background_white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16">

                <TextView
                    style="@style/BaseTextViewStyle.Black.14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="录入人脸"
                    android:textColor="@color/color_black_383838" />

                <LinearLayout
                    android:id="@id/news_user_input_face_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="#ffff6600"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/news_user_name2"
                        style="@style/BaseTextViewStyle.Gray.11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:gravity="end"
                        android:text="请录入人脸用于考勤"
                        android:textColor="@color/color_gray_7c7c7c" />

                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:src="@mipmap/arrow_detail" />
            </LinearLayout>


            <LinearLayout
                android:id="@id/news_user_education_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/background_white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16">

                <TextView
                    style="@style/BaseTextViewStyle.Black.14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学历"
                    android:textColor="@color/color_black_383838" />

                <TextView
                    android:id="@id/news_user_education"
                    style="@style/BaseTextViewStyle.Black.14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="@dimen/dp_15"
                    android:textColor="@color/color_gray_7c7c7c" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_detail" />
            </LinearLayout>


            <LinearLayout
                android:id="@id/news_user_address_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/background_white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16">

                <TextView
                    style="@style/BaseTextViewStyle.Black.14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="现居地址"
                    android:textColor="@color/color_black_383838" />

                <TextView
                    android:id="@id/news_user_address"
                    style="@style/BaseTextViewStyle.Black.14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="@dimen/dp_15"
                    android:textColor="@color/color_gray_7c7c7c"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_detail" />
            </LinearLayout>


            <RelativeLayout
                android:id="@id/news_user_holding_certificates"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/background_white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:visibility="gone">

                <TextView
                    style="@style/BaseTextViewStyle.Black.14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="持有证书"
                    android:textColor="@color/color_black_383838" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/arrow_detail" />
            </RelativeLayout>

            <LinearLayout
                android:id="@id/news_user_medical_report"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/background_white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:visibility="gone">

                <TextView
                    style="@style/BaseTextViewStyle.Black.14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体检报告"
                    android:textColor="@color/color_black_383838" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="#ffff6600"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/news_user_name3"
                        style="@style/BaseTextViewStyle.Gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:gravity="end"
                        android:text="请上传体检报告"
                        android:textColor="@color/color_gray_7c7c7c"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:src="@mipmap/arrow_detail" />
            </LinearLayout>


            <LinearLayout
                android:id="@id/news_user_real_verify"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/background_white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:visibility="gone">

                <TextView
                    style="@style/BaseTextViewStyle.Black.14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实名认证"
                    android:textColor="@color/color_black_383838" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="#ffff6600"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/news_user_name4"
                        style="@style/BaseTextViewStyle.Gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:gravity="end"
                        android:text="请实名认证"
                        android:textColor="@color/color_gray_7c7c7c"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:src="@mipmap/arrow_detail" />
            </LinearLayout>


            <LinearLayout
                android:id="@id/news_user_emergency_contact_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_73"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_53"
                android:background="@color/background_white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16">

                <TextView
                    style="@style/BaseTextViewStyle.Black.14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="紧急联系人"
                    android:textColor="@color/color_black_383838" />

                <TextView
                    android:id="@id/news_user_emergency_contact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="@dimen/dp_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_detail" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

