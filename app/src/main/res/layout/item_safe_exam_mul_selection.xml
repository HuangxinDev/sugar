<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@id/title_type"
        style="@style/BaseTextViewStyle.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单选题"
        android:textSize="14sp" />

    <TextView
        android:id="@id/title"
        style="@style/BaseTextViewStyle.Black.14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:gravity="center_vertical"
        android:text="拆除（       ）模板时，为避免突然整体塌落，必要时应先设立临时支撑，然后进行拆卸。" />

    <RadioGroup
        android:id="@id/select_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp">


        <CheckBox
            style="@style/BaseTextViewStyle.Black.14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:button="@drawable/drawable_mul_a"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_16"
            android:text="多选A" />

        <CheckBox
            style="@style/BaseTextViewStyle.Black.14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:button="@drawable/drawable_mul_b"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_16"
            android:text="多选B" />

        <CheckBox
            style="@style/BaseTextViewStyle.Black.14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:button="@drawable/drawable_mul_c"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_16"
            android:text="多选C" />

        <CheckBox
            style="@style/BaseTextViewStyle.Black.14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:button="@drawable/drawable_mul_d"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_16"
            android:text="多选D" />
    </RadioGroup>

</LinearLayout>