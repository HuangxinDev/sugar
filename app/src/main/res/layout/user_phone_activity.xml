<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@id/action_bar"
        layout="@layout/layout_action_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/divider_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/BaseTextViewStyle.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前手机号"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@id/news_user_phone"
            style="@style/BaseTextViewStyle.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="@dimen/sp_23" />

        <TextView
            android:id="@id/settings_update_phone"
            style="@style/BaseTextViewStyle.White"
            android:layout_width="@dimen/dp_275"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_135"
            android:background="@drawable/background_btn_flavor_1"
            android:gravity="center"
            android:text="更换手机"
            android:textSize="@dimen/sp_21" />

    </LinearLayout>


</LinearLayout>