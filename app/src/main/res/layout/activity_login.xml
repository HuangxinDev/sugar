<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="121dp"
        android:enabled="false"
        android:fontFamily="@font/msyh"
        android:gravity="center"
        android:text="@string/user_login"
        android:textColor="#ff252525"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/quick_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="41dp"
        android:fontFamily="@font/msyh"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:text="@string/quick_login_text"
        android:textColor="@drawable/login_text_color_selector"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_tv" />

    <TextView
        android:id="@+id/password_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:fontFamily="@font/msyh"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:text="@string/password_login_text"
        android:textColor="@drawable/login_text_color_selector"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/quick_login_btn"
        app:layout_constraintLeft_toRightOf="@+id/quick_login_btn" />

    <View
        android:id="@+id/quick_login_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FF007AFF"
        android:visibility="invisible"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@id/quick_login_btn"
        app:layout_constraintRight_toRightOf="@id/quick_login_btn"
        app:layout_constraintTop_toBottomOf="@id/quick_login_btn" />

    <View
        android:id="@+id/password_login_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FF007AFF"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@id/password_login_btn"
        app:layout_constraintRight_toRightOf="@id/password_login_btn"
        app:layout_constraintTop_toBottomOf="@id/password_login_btn" />

    <View
        android:id="@+id/divider_login"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginEnd="46dp"
        android:background="@color/divider_color_ffdedede"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@id/quick_login_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_login_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/divider_login">

        <include
            android:id="@+id/verify_account"
            layout="@layout/login_user_account_verify"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="21dp" />

        <include
            android:id="@+id/verify_pwd"
            layout="@layout/login_user_password_verify"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="21dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/verify_account" />

        <include
            android:id="@+id/verify_picture"
            layout="@layout/login_user_icon_verify"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/verify_account" />

        <include
            android:id="@+id/verify_code"
            layout="@layout/login_user_number_verify"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@id/verify_picture" />

        <TextView
            android:id="@+id/btn_login"
            style="@style/TextViewStyle1"
            android:layout_width="287dp"
            android:layout_height="43dp"
            android:layout_marginTop="60dp"
            android:text="登录" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>