<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <include
        android:id="@id/action_bar"
        layout="@layout/layout_action_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/divider_color_ffdedede" />

    <ImageView
        android:id="@id/news_user_input_face"
        android:layout_width="172dp"
        android:layout_height="109dp"
        android:layout_marginTop="105dp"
        android:src="@mipmap/realname_face_detect" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#fff15555" />

        <TextView
            style="@style/BaseTextViewStyle.Gray.11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:text="录入照片仅用于每天考勤打卡识别使用" />
    </LinearLayout>

</LinearLayout>