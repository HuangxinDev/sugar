<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical">

    <com.njxm.smart.view.NoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_color_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <com.njxm.smart.view.ButtonBarItem
            android:id="@+id/attendance_btn"
            android:layout_width="0dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:icon="@drawable/picture_attendance_icon"
            app:iconNormal="@mipmap/picture_attendance_normal"
            app:iconSelected="@mipmap/picture_attendance_selected"
            app:spacing="6dp"
            app:text="考勤"
            app:textColor="@drawable/login_text_color_selector" />


        <com.njxm.smart.view.ButtonBarItem
            android:id="@+id/workcenter_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:icon="@drawable/picture_workcenter_icon"
            app:iconNormal="@mipmap/picture_workcenter_normal"
            app:iconSelected="@mipmap/picture_workcenter_selected"
            app:spacing="6dp"
            app:text="工作中心"
            app:textColor="@drawable/login_text_color_selector" />

        <com.njxm.smart.view.ButtonBarItem
            android:id="@+id/messages_btn"
            android:layout_width="0dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@mipmap/picture_message_normal"
            app:iconSelected="@mipmap/picture_message_selected"
            app:spacing="6dp"
            app:text="消息"
            app:textColor="@drawable/login_text_color_selector" />

        <com.njxm.smart.view.ButtonBarItem
            android:id="@+id/personal_btn"
            android:layout_width="0dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@mipmap/picture_mine_normal"
            app:iconSelected="@mipmap/picture_mine_selected"
            app:spacing="6dp"
            app:text="我的"
            app:textColor="@drawable/login_text_color_selector" />
    </LinearLayout>

</LinearLayout>