<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <!--    闪屏主题-->
    <style name="LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar">
<!--        <item name="android:windowBackground">@mipmap/app_background_lunch_screen</item>-->
        <item name="android:windowBackground">@color/background_white</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:launchMode">singleTask</item>
    </style>

    <style name="ActivityStyle" parent="LaunchTheme">
        <item name="android:windowBackground">@color/background_white</item>
    </style>

    <style name="XmlBackground">
        <item name="android:background">@color/background_white</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="TextViewStyle1">
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/msyh</item>
        <item name="android:background">@drawable/background_btn_flavor_1</item>
    </style>

    <!--    基本字体风格 微软雅黑字体-->
    <style name="BaseTextViewStyle">
        <item name="android:fontFamily">@font/msyh</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BaseTextViewStyle.Black">
        <item name="android:textColor">@color/color_252525</item>
    </style>

    <style name="BaseTextViewStyle.Black.11">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="BaseTextViewStyle.Black.14">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="BaseTextViewStyle.Black.17">
        <item name="android:textSize">@dimen/sp_17</item>
    </style>

    <style name="BaseTextViewStyle.Black.26">
        <item name="android:textColorHint">@color/color_96A1AD</item>
        <item name="android:textColor">@color/color_252525</item>
        <item name="android:textSize">@dimen/sp_26</item>
    </style>

    <style name="BaseTextViewStyle.Black2">
        <item name="android:textColor">@color/color_black_383838</item>
    </style>

    <style name="BaseTextViewStyle.Black2.14">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="BaseTextViewStyle.Blue">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_007AFF</item>
    </style>

    <style name="BaseTextViewStyle.White">
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="BaseTextViewStyle.White.23">
        <item name="android:textSize">@dimen/sp_23</item>
    </style>

    <style name="BaseTextViewStyle.Gray">
        <item name="android:textColor">@color/color_96A1AD</item>
    </style>

    <style name="BaseTextViewStyle.Gray.11">
        <item name="android:textSize">@dimen/sp_11</item>
    </style>

    <!-- 类似于登录按钮的所有按钮风格 -->
    <style name="TVBtn" parent="BaseTextViewStyle.White">
        <item name="android:layout_width">@dimen/dp_275</item>
        <item name="android:layout_height">@dimen/dp_42</item>
        <item name="android:background">@drawable/background_btn_flavor_1</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--分割线-->
    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/background_gray</item>
    </style>


</resources>
